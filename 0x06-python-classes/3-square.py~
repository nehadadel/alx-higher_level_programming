#!/usr/bin/python3
"""Square Class

defining the square

"""


class Square:
    """a 2d square"""
    def __init__(self, size=0):
        if type(size) is not int:
            raise TypeError("size must be an integer")
        if size < 0:
            raise ValueError("size must be >= 0")
        self.__size = size
    def area(self):
        return size ** 2
